@{
}
@model Movie

<h3>@(Model.MovieId == 0 ? "Add Movie" : "Edit Movie")</h3>

<form asp-action="@(Model.MovieId == 0 ? "AddMovie" : "EditMovie")" method="post">

    <!-- MovieId (hidden) -->
    <div class="form-group">
        <input asp-for="MovieId" type="hidden" required />
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <!-- Title (Required) -->
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- CategoryId -->
    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">Select A Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <!-- Year (Required) -->
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" required min="1888" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director (Optional) -->
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Rating (Optional) -->
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="">-- Select Rating --</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-7">TV-7</option>
            <option value="TV-14">TV-14</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Edited (Required) -->
    <div class="form-group">
        <label asp-for="Edited"></label>
        <select asp-for="Edited" class="form-control">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <!-- Lent To (Optional) -->
    <div class="form-group">
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <!-- Copied To Plex (Required) -->
    <div class="form-group">
        <label asp-for="CopiedToPlex"></label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <!-- Notes (Max 25 Characters, Optional) -->
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <br />
    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div asp-validation-summary="ModelOnly"></div>