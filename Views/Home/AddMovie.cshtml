@{
}
@model Movie

<h3>Add Movie</h3>

<form asp-action="AddMovie" method="post">
    <!-- Title (Required) -->
    <label for="Title">Title:</label>
    <input asp-for="Title" class="form-control" required />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <!-- Rating Dropdown -->
    <label for="Rating">Rating:</label>
    <select asp-for="Rating" class="form-control" required>
        <option value="">-- Select Rating --</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating" class="text-danger"></span>
    <br />

    <!-- Edited (Yes/No) -->
    <label for="Edited">Edited:</label>
    <select asp-for="Edited" class="form-control">
        <option value="">-- Select --</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <!-- Lent To (Optional) -->
    <label for="LentTo">Lent To:</label>
    <input asp-for="LentTo" class="form-control" />
    <br />

    <!-- Notes (Max 25 Characters, Optional) -->
    <label for="Notes">Notes:</label>
    <input asp-for="Notes" class="form-control" maxlength="25" />
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</form>